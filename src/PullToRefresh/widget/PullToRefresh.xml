<?xml version="1.0" encoding="utf-8" ?>
<widget id="PullToRefresh.widget.PullToRefresh" needsEntityContext="false"  offlineCapable="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>Pull to refresh</name>
    <description/>
    <icon></icon>
    <properties>
        <property key="pullToRefreshText" type="translatableString" required="false">
            <caption>Text when pulling down</caption>
            <category>Display</category>
            <description>Text displayed while pulling</description>
            <translations>
                <translation lang="en_US">Pull to refresh</translation>
                <translation lang="nl_NL">Trek omlaag voor herladen</translation>
            </translations>
        </property>
        <property key="releaseToRefreshText" type="translatableString" required="false">
            <caption>Release to refresh text</caption>
            <category>Display</category>
            <description>Text displayed when pulling past refresh point</description>
            <translations>
                <translation lang="en_US">Release to refresh</translation>
                <translation lang="nl_NL">Laat los om te herladen</translation>
            </translations>
        </property>
        <property key="refreshText" type="translatableString" required="false">
            <caption>Text when refreshing</caption>
            <category>Display</category>
            <description>Text displayed when refreshing</description>
            <translations>
                <translation lang="en_US">Refreshing</translation>
                <translation lang="nl_NL">Herladen</translation>
            </translations>
        </property>
        <property key="action" type="enumeration" defaultValue="refresh">
            <caption>On pull down action</caption>
            <category>Events</category>
            <description/>
            <enumerationValues>
                <enumerationValue key="refresh">Refresh</enumerationValue>
                <enumerationValue key="nanoflow">Call nanoflow</enumerationValue>
                <enumerationValue key="microflow">Call microflow</enumerationValue>
            </enumerationValues>
        </property>
        <property key="onPullNanoflow" type="nanoflow" required="false">
            <caption>Nanoflow</caption>
            <category>Events</category>
            <description/>
            <returnType type="Void" />
        </property>
        <property key="onPullMicroflow" type="microflow" required="false">
            <caption>Microflow</caption>
            <category>Events</category>
            <description/>
            <returnType type="Void" />
        </property>
    </properties>
</widget>
